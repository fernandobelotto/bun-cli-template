{
  "name": "bun-cli-template",
  "version": "1.0.0",
  "description": "A modern CLI template built with Bun",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bun-cli-template": "./dist/index.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun --minify",
    "build:watch": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "build:executable": "bun build ./src/index.ts --compile --outfile bun-cli-template",
    "dev": "bun --watch src/index.ts",
    "start": "bun dist/index.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "typecheck:fast": "tsgo --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "husky"
  },
  "keywords": [
    "cli",
    "bun",
    "template",
    "typescript"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@inquirer/prompts": "^8.1.0",
    "chalk": "^5.4.1",
    "commander": "^14.0.2",
    "fast-glob": "^3.3.3",
    "minimatch": "^9.0.5",
    "progress": "^2.0.3",
    "tiktoken": "^1.0.20"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.2",
    "@semantic-release/npm": "^13.1.3",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@types/node": "^22.15.2",
    "@types/progress": "^2.0.7",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.1",
    "semantic-release": "^25.0.2",
    "@typescript/native-preview": "^7.0.0-dev",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "engines": {
    "bun": ">=1.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandobelotto/bun-cli-template.git"
  },
  "bugs": {
    "url": "https://github.com/fernandobelotto/bun-cli-template/issues"
  },
  "homepage": "https://github.com/fernandobelotto/bun-cli-template#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
